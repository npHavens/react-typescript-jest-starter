{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "./lib/dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "plugins": [{"name": "typescript-tslint-plugin"}]
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "node_modules"
  ]
}